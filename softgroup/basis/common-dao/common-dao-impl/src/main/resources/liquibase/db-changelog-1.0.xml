<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="profile_settings-table-creating-1" author="AlexKazmirchuk">
        <createTable tableName="profile_settings">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="settings_data" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="profiles-table-creating-2" author="AlexKazmirchuk">
        <createTable tableName="profiles">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="avatar_uri" type="varchar(255)"/>
            <column name="create_date_time" type="bigint(20)"/>
            <column name="name" type="varchar(255)"/>
            <column name="phone_number" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="update_date_time" type="bigint(20)"/>
            <column name="profile_settings_id" type="varchar(36)">
                <constraints foreignKeyName="fk_profiles_profile_settings" references="profile_settings(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="devices-table-creating-3" author="AlexKazmirchuk">
        <createTable tableName="devices">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="device_id" type="varchar(255)"/>
            <column name="last_confirmation_date" type="bigint(20)"/>
            <column name="locale" type="varchar(255)"/>
            <column name="profile_id" type="varchar(36)">
                <constraints nullable="false" foreignKeyName="fk_devices_profiles" references="profiles(id)"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="contacts-table-creating-4" author="AlexKazmirchuk">
        <createTable tableName="contacts">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="phone" type="varchar(255)"/>
            <column name="profile_id" type="varchar(36)">
                <constraints nullable="false" foreignKeyName="fk_contacts_profiles" references="profiles(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>